extends layout

mixin searchField(parameter)
  - let fieldId = parameter + "Search";
  - let shownLabel = parameter.toUpperCase();
  div(class="five wide inline field")
      label(for=fieldId)=shownLabel
      input(id=fieldId name=parameter class="thirteen wide field" type="text")
      

block pane
  div(class="ui raised segment container" id="pane")
    h1(class="ui center aligned header")="Spotifind"
    form(class="ui form" onSubmit="formHandler(); return false;")
      div(class="fields")
        +searchField("artist")
        div(class="ui slider checkbox")
          input(name="similarArtists" id='similarArtists' type="checkbox")
          label(for="similarArtists")='Discover'
        +searchField("area")
        div(class="five wide inline field")
          label(for="fromDate")='DATES'
          input(id="fromDate" type="text" class="six wide field")
          input(id="toDate" type="text" class="six wide field")
        div(class="one wide field")
            input(class="ui button" id="submitBtn" type="submit", value="Search!")

block main
  div(class="ui grid" id="main")
    div(id="map" class="twelve wide column")
    div(class="ui list four wide column" id="sidebar")